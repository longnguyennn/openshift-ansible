cluster:
  name: ${CLUSTER_NAME}

script:
  inline: on
  stored: on

node:
  master: ${IS_MASTER}
  data: ${HAS_DATA}
  name: ${NODE_NAME}
  ingest: ${NODE_INGEST}

network:
  host: 0.0.0.0

http:
  enabled: ${HTTP_ENABLED}
  compression: true

cloud:
  kubernetes:
    service: ${SERVICE_DNS}
    namespace: ${NAMESPACE}

discovery:
  zen.hosts_provider: kubernetes
  zen.ping.unicast.hosts: ${SERVICE_DNS}
#  minimum_master_nodes: ${NUMBER_OF_MASTERS}

plugin.mandatory: discovery-kubernetes

